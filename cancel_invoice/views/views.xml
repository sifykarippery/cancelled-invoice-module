<odoo><record id="view_account_invoice_form" model="ir.ui.view">
     <field name="model">account.invoice</field>
     <field name="inherit_id" ref="account.invoice_supplier_form"/>
     <field name="arch" type="xml">
       <xpath expr="//button[@name='action_invoice_open']" position="after">
		<button string="Cancelled invoice" type="object" name="cancelled_invoice" attrs="{'invisible': [('state', '=', ('draft'))]}" />
        </xpath>
    </field>
    </record></odoo>